<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration>

<appender name="FILE4" class="org.apache.log4j.RollingFileAppender">
    <!-- specifica il file dove salvare il logger -->
    <param name="file" value="/home/riccardo/Desktop/logclass2_output/SOLO_INFO.txt"/>
    <!-- specifica la dimensione massima del file di backup -->
    <param name="MaxFileSize" value="10KB"/>
    <!-- specifica il numero di file di backup -->
    <param name="MaxBackupIndex" value="3"/>
    <layout class="org.apache.log4j.PatternLayout" >
      <param name="ConversionPattern" value="%5p [%t] (%F:%L) - %m%n"/>     
    </layout>
    <filter class="org.apache.log4j.varia.LevelMatchFilter">
      <param name="LevelToMatch" value="INFO" />
      <param name="AcceptOnMatch" value="true" />
    </filter>
    <filter class="org.apache.log4j.varia.DenyAllFilter" /> 
</appender>

<appender name="FILE5" class="org.apache.log4j.RollingFileAppender">
    <param name="Threshold" value="ERROR"/>  
    <!-- specifica il file dove salvare il logger -->
    <param name="file" value="/home/riccardo/Desktop/logclass2_output/Threshold_ERROR_log.txt"/>
    <!-- specifica la dimensione massima del file di backup -->
    <param name="MaxFileSize" value="10KB"/>
    <!-- specifica il numero di file di backup -->
    <param name="MaxBackupIndex" value="3"/>
    <layout class="org.apache.log4j.PatternLayout" >
          <param name="ConversionPattern" value="%5p [%t] (%F:%L) - %m%n"/>     
    </layout>
</appender>

<appender name="FILE6" class="org.apache.log4j.RollingFileAppender">
    <!-- specifica il file dove salvare il logger -->
    <param name="file" value="/home/riccardo/Desktop/logclass2_output/DEBUG.txt"/>
    <!-- specifica la dimensione massima del file di backup -->
    <param name="MaxFileSize" value="10KB"/>
    <!-- specifica il numero di file di backup -->
    <param name="MaxBackupIndex" value="3"/>
    <layout class="org.apache.log4j.PatternLayout" >
      <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %p [%C:%L] - %m%n"/>  
    </layout>
</appender>

<logger name="com.foo" additivity="false">
    <level value="debug" />
    <appender-ref ref="FILE4" />
    <appender-ref ref="FILE5" />
    <appender-ref ref="FILE6" />
</logger>

<logger name="Milan" additivity="false">
    <level value="debug" />
    <appender-ref ref="FILE4" />
    <appender-ref ref="FILE5" />
    <appender-ref ref="FILE6" />
 </logger>
 
<logger name="Barcellona" additivity="false">
    <level value="debug" />
    <appender-ref ref="FILE4" />
    <appender-ref ref="FILE5" />
    <appender-ref ref="FILE6" />
 </logger>

<logger name="Inter" additivity="false">
    <level value="debug" />
    <appender-ref ref="FILE4" />
    <appender-ref ref="FILE5" />
    <appender-ref ref="FILE6" />
 </logger>

<logger name="log4j.rootLogger" additivity="false">
   <level value="DEBUG"/>
   <appender-ref ref="FILE4"/>
   <appender-ref ref="FILE5"/>
   <appender-ref ref="FILE6"/>
</logger>

</log4j:configuration>
